# Database
DATABASE_URL="postgresql://prompteasy:your_password@localhost:5432/prompteasy"

# Redis (optional - for caching and rate limiting)
REDIS_URL="redis://:your_password@localhost:6379"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Public App URL (for share links - set to your production domain in production)
# If not set, will fall back to NEXTAUTH_URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Google OAuth
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# OpenAI API (for AI-powered prompt improvement)
OPENAI_API_KEY="your-openai-api-key"

# Anthropic API (for AI-powered prompt improvement)
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Okta OAuth (Enterprise tier - optional)
OKTA_CLIENT_ID="your-okta-client-id"
OKTA_CLIENT_SECRET="your-okta-client-secret"
OKTA_ISSUER="https://your-okta-domain.okta.com"

# Stripe (for billing and subscriptions - optional)
STRIPE_PUBLIC_KEY="your-stripe-public-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"
STRIPE_PRICE_ID_PRO_MONTHLY="price_xxx"
STRIPE_PRICE_ID_PRO_YEARLY="price_xxx"
STRIPE_PRICE_ID_ENTERPRISE_MONTHLY="price_xxx"
STRIPE_PRICE_ID_ENTERPRISE_YEARLY="price_xxx"

# App Settings
NODE_ENV="development"
PORT=3000

# Prompts.chat Integration
PROMPTS_CHAT_CSV_URL="https://raw.githubusercontent.com/f/awesome-chatgpt-prompts/main/prompts.csv"
